#!/bin/bash

LIBS="*.ppr"
LOAD=""

CFLAGS="-g -O0"
if [[ "$1" == "-O" ]]; then
    CFLAGS="-g -DNDEBUG -O2"
    shift
fi

OUT=`./eval -ident $1`
DIR=poprc_out

set -x
mkdir -p $DIR
./eval -lo ${LIBS} -main $1 -cc $1 > ${DIR}/${OUT}.c
clang -S -emit-llvm ${CFLAGS} -DNOLOG -I. -o ${DIR}/${OUT}.ll ${DIR}/${OUT}.c
clang ${CFLAGS} -DNOLOG -I. -o ${DIR}/${OUT} ${DIR}/${OUT}.c cgen/parse_args.c support.c error.c tok.c
